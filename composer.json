{
    "name": "simpod/kafka",
    "description": "PHP Kafka boilerplate wrapper around RdKafka",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Simon Podlipsky",
            "email": "simon@podlipsky.net"
        }
    ],
    "config": {
        "sort-packages": true
    },
    "require": {
        "php": "^8.0",
        "ext-pcntl": "*",
        "ext-rdkafka": "^5",
        "psr/log": "^1.1"
    },
    "require-dev": {
        "doctrine/coding-standard": "^9.0",
        "infection/infection": "^0.24.0",
        "kwn/php-rdkafka-stubs": "^2.0",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan": "0.12.92",
        "phpstan/phpstan-phpunit": "0.12.18",
        "phpstan/phpstan-strict-rules": "0.12.9",
        "phpunit/phpunit": "^9.2",
        "psalm/plugin-phpunit": "^0.16.1",
        "roave/infection-static-analysis-plugin": "^1.7",
        "thecodingmachine/phpstan-safe-rule": "^1.0",
        "vimeo/psalm": "^4.4"
    },
    "suggest": {
        "kwn/php-rdkafka-stubs": "Support and autocompletion for RDKafka in IDE | require as dev dependency"
    },
    "autoload": {
        "psr-4": {
            "SimPod\\Kafka\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SimPod\\Kafka\\Tests\\": "tests/"
        }
    }
}
